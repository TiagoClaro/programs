		display.print("-> Light Value");
		display.setCursor(0,25);

		if(menuItem == 2){
			display.setTextColor(WHITE, BLACK);
		}
		else{
			display.setTextColor(BLACK, WHITE);
		}
		display.print("-> Light Map");
		display.setCursor(0, 35);

		if(menuItem == 3){
			display.setTextColor(WHITE, BLACK);
		}
		else{
			display.setTextColor(BLACK, WHITE);
		}
		display.print("-> Home");
	}

	else if(page == 3){
		
		display.setTextSize(1);
		display.clearDisplay();
		display.setTextColor(BLACK, WHITE);
		display.setCursor(7, 0);
		display.print("LIGHT VALUE");
		display.drawFastHLine(0, 10, 83, BLACK);
		display.setCursor(0,15);
		display.print("Up Light:");
		display.print(upLight);
		display.setCursor(0, 30);
		display.print("Down Light:");
		display.print(downLight);
	}

	else if(page == 4){

		if(upLight > downLight){
			display.drawBitmap(0, 0, setaCima, 84, 48, BLACK);
		}
		else if(downLight > upLight){
