void setup(){

	pinMode(9, INPUT_PULLUP);
	pinMode(10, INPUT_PULLUP);

	pinMode(8, OUTPUT);
	digitalWrite(8, HIGH);

	Serial.begin(9600);

	display.begin();
	display.setContrast(contrast);
	display.clearDisplay();
	display.display();

}

void loop(){

	drawMenu();

	downButtonState = digitalRead(10);
	selectButtonState = digitalRead(9);

	checkDownButton();
	checkSelectButton();

	if(down && page == 2){
		down = false;
		menuItem++;

		if(menuItem == 4){
			menuItem = 1;
		}
	}

	if(select && page == 1){
		page == 2;
	}

	if(select && page == 2){

		if(menuItem == 1){
			page == 3;
		}
		else if(menuItem == 2){
			page == 4;
		}
		else if(menuItem == 3){
			page == 1;
		}
	}
}


void drawMenu(){

	if(page == 1){
		display.drawBitmap(0, 0, logo_nokia, 84, 48, BLACK);
	}
	
	else if(page == 2){
		display.setTextSize(1);
		display.clearDisplay();
		display.setTextColor(BLACK, WHITE);
		display.setCursor(7, 0);
		display.print("LIGHT SENSOR");
		display.drawFastHLine(0, 10, 83, BLACK);
		display.setCursor(0,15);

		if(menuItem == 1){
